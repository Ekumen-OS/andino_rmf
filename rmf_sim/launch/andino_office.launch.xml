<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share rmf_sim)/launch/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share rmf_visualization_schedule)/config/rmf.rviz"/>
    <arg name="config_file" value="$(find-pkg-share rmf_maps)/maps/andino_office/andino_office.building.yaml"/>
  </include>

  <!-- TinyRobot fleet adapter -->
  <group>
    <include file="$(find-pkg-share andino_fleet_adapter)/launch/andino_fleet_adapter.launch.py"/>
  </group>

</launch>